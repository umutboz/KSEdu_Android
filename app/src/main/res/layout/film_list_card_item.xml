<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="380dp" app:cardCornerRadius="5dp" android:layout_margin="8dp">
    <RelativeLayout android:background="#FFF"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
            android:id="@+id/film_list_card_item_img" android:layout_width="match_parent"
            android:layout_height="250dp" android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/film_list_card_item_title_tv" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/film_list_card_item_img"
            android:maxLines="3" android:padding="8dp"
            android:text="@string/title" android:textColor="#222"
            android:textStyle="bold" android:textSize="22dp" />
        <TextView
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_below="@+id/film_list_card_item_title_tv"
            android:maxLines="3" android:id="@+id/film_list_card_item_desc_tv"
            android:padding="8dp" android:text="@string/description"
            android:textColor="#666" android:textSize="14dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>